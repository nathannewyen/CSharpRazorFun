<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <p>Here are some delicious foods!</p>
    @{
        var FoodList = new List<string>
    {
        "Apple Pie",
        "Burritos",
        "Clams Casino",
        "Donuts"
    };

        foreach (var food in FoodList)
        {
            if (food[0] == 'C')
            {
                <p style="color: red;">@food</p>
            }
            else
            {
                <p>@food</p>
            }
        }
    }
</body>

</html>